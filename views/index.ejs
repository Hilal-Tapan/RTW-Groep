<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") -%>

    <body>
        <header>
        </header>
        <main>
            <h1>Trivia.Chat</h1>

            <section>
                <h2>
                    Choose your username
                </h2>
                <form>
                    <input type="text" id="username-input" placeholder="Enter your username" required>
                </form>

                <button>Start chatting</button>
            </section>
            
            <section>
                <ul id="berichten"></ul>
                <form>
                    <input type="text" name="message" id="message-input" placeholder="Chatting ..."  required>
                    <button type="submit" id="message-button"></button>
                </form>

                <div id="question-container">
                    <section id="questions">
                        <h2>Question</h2>
                        <p id="question-text"></p>
                        <ul id="answer-choices"></ul>
                    </section>
                </div>
            </section>
        </main>
        <%- include("./partials/footer.ejs") -%>

        <script src="/socket.io/socket.io.js"></script>
    </body>

</html>
